@model Act2_ZooPlanet.Models.ViewModels.EspeciesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<h1>Editar Especies</h1>

<form method="post" asp-action="Editar" asp-controller="Home" asp-area="Admin">
    <input type="hidden" asp-for="Especie.Id" />
    <label>Nombre:</label>
    <input required type="text" asp-for="Especie.Especie" />
    <label>Clase:</label>
    <select required asp-for="Especie.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
        <option selected="selected" value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required type="text" asp-for="Especie.Habitat" />
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Especie.Peso" />
    <label>Tamaño:</label>
    <input type="number" step="0.1" asp-for="Especie.Tamaño" />
    <label>Observaciones:</label>
    <textarea asp-for="Especie.Observaciones"></textarea>

    @Html.ValidationSummary()

    <input type="submit" value="Guardar" />
    <a href="~/Admin/Home">
        <input type="button" value="Cancelar" />
    </a>
</form>