@model Act2_ZooPlanet.Models.ViewModels.EspeciesViewModel
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @{
        Layout = "_Layout";
    }

    <h1>Agregar Especies</h1>

    <form method="post" asp-action="Agregar" asp-controller="Home" asp-area="Admin">
        <label>Nombre:</label>
        <input required asp-for="Especie.Especie"/>

        <label>Clase:</label>
        <select required asp-for="Especie.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
            <option value="">Seleccione una clase</option>
        </select>
        <label>Habitat:</label>
        <input required asp-for="Especie.Habitat"/>
        <label>Peso:</label>
        <input type="number" step="0.1" asp-for="Especie.Peso"/>
        <label>Tamaño:</label>
        <input step="0.1" asp-for="Especie.Tamaño"/>
        <label>Observaciones:</label>
        <textarea asp-for="Especie.Observaciones"></textarea>

        <input type="submit" value="Agregar" />
        <a href="~/Admin/Home">
            <input type="button" value="Cancelar" />
        </a>
    </form>
